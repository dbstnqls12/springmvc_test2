<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.junefw.infra.modules.member.MemberMpp">

    <resultMap id="resultMapObj" type="com.junefw.infra.modules.member.Member"></resultMap>

	<select id="selectList" resultMap="resultMapObj">
			select
				kbmmSeq
				,kbmmId
				,kbmmName
				,kbmmPassword
				,kbmmAdminNy
			from
				kbMember 
	</select>

	<select id="selectOne" resultMap="resultMapObj">
		SELECT
			kbmmSeq
			,kbmmAdminNy
			,kbmmId
			,kbmmName
			,kbmmPassword
		FROM 
			kbMember 
		WHERE 1=1
			AND kbmmSeq=#{kbmmSeq}

	</select>
	
	<insert id="insert" >
			insert into kbMember(
				kbmmId
				,kbmmName
				,kbmmPassword
				,kbmmDelNy
				,kbmmAdminNy
			) values(
				#{kbmmId}
				,#{kbmmName}
				,#{kbmmPassword}
				,0
				,0
			)
	</insert>	
	<update id="update">
		UPDATE kbMember SET 	
			kbmmName = #{kbmmName}
			,kbmmId = #{kbmmId}
			,kbmmPassword = #{kbmmPassword}
		WHERE 1=1
			AND kbmmSeq=#{kbmmSeq}
	</update>
</mapper>